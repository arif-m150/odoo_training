<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="training_course_view_tree">
      <field name="name">training.course.tree</field>
      <field name="model">training.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="user_id"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record id="training_course_view_form" model="ir.ui.view">
        <field name="name">training.course.view.form</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <form string="Training Course">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="user_id" />
                    </group>
                    <notebook>
                        <page string="Sesi">
                            <field name="session_line" mode="tree,form" nolabel="1">
                                <tree string="Sesi">
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="email"/>
                                    <field name="start_date"/>
                                    <field name="duration"/>
                                    <field name="seats"/>
                                </tree>
                                <form string='Sesi'>
                                    <group>
                                        <field name="name"/>
                                        <field name="partner_id"/> 
                                        <field name="start_date"/>
                                        <field name="duration"/>
                                        <field name="seats"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Cendera Mata">
                            <field name="product_ids" nolabel="1"/>
                        </page>
                        <page string="Keterangan">
                            <group>
                                <field name="description" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="training_course_action">
      <field name="name">Course</field>
      <field name="res_model">training.course</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
            <p name="o_view_nocontent_smiling_face">
                Buatlah kursus pertamamu ...
            </p>
        </field>
    </record>

    <!-- Membuat View Tree/List Session -->
    <record id="training_session_view_tree" model="ir.ui.view"> <field name="name">training.session.tree</field>
        <field name="model">training.session</field>
        <field name="arch" type="xml">
            <tree string="session List">
                <field name="course_id"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="duration"/>
                <field name="seats"/>
            </tree>
        </field>
    </record>

    <!-- Membuat View Form Session -->
    <record id="training_session_view_form" model="ir.ui.view">
        <field name="name">training.session.form</field>
        <field name="model">training.session</field>
        <field name="arch" type="xml">
            <form string="Session Form">
                <sheet>
                    <group>
                        <group string="Informasi">
                            <field name="course_id"/>
                            <field name="name"/>
                            <field name="partner_id"/>
                        </group>
                        <group string="Jadwal">
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="seats"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Peserta">
                            <field name="attendee_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Membuat Action/Event Session -->
    <record id="training_session_action" model="ir.actions.act_window"> <field name="name">Session</field>
        <field name="res_model">training.session</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Membuat View Tree/List Attendee -->
 
    <record id="training_attendee_view_tree" model="ir.ui.view">
        <field name="name">training.attendee.tree</field>
        <field name="model">training.attendee</field>
        <field name="arch" type="xml">
            <tree string="Attendee List">
                <field name="name"/>
                <field name="email"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>
    
    <!-- Membuat View Form Attendee -->
    
    <record id="training_attendee_view_form" model="ir.ui.view">
        <field name="name">training.attendee.form</field>
        <field name="model">training.attendee</field>
        <field name="arch" type="xml">
            <form string="Attendee Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="gender" widget="radio" options="{'horizontal': True}"/>
                        <field name="marital"/>
                    </group>
                    <notebook>
                        <page string="Sesi">
                            <field name="session_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Membuat Action/Event Attendee -->
    
    <record id="training_attendee_action" model="ir.actions.act_window">
        <field name="name">Attendee</field>
        <field name="res_model">training.attendee</field>
        <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
